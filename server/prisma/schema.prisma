generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  image     String?
  role      Role     @default(USER)
}

enum Role {
  USER  @map("USER") 
  ADMIN @map("ADMIN")
}

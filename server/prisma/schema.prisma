generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  image     String?
  role      Role     @default(USER)
  firstName      String? 
  lastName      String?
  age       Int?
  height    Float?
  weight    Float?
  gender    Gender?
  BMR       Int?
  TDEE      Int?
  profileComplete Boolean  @default(false)
}

enum Role {
  USER  @map("USER") 
  ADMIN @map("ADMIN")
}

enum Gender {
  MALE
  FEMALE
}